{
  "openapi": "3.0.0",
  "info": {
    "title": "Chat AI API",
    "version": "1.0.0"
  },
  "servers": [
    { "url": "/api" }
  ],
  "paths": {
    "/chat": {
      "post": {
        "summary": "Gửi prompt, nhận phản hồi AI",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "message": { "type": "string" },
                  "conversationId": { "type": "integer" }
                },
                "required": ["message"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Phản hồi AI",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "conversationId": { "type": "integer" },
                    "messages": { "type": "array", "items": { "type": "object" } },
                    "reply": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/conversations": {
      "get": {
        "summary": "Lấy danh sách hội thoại",
        "responses": {
          "200": {
            "description": "Danh sách hội thoại",
            "content": {
              "application/json": {
                "schema": { "type": "array", "items": { "type": "object" } }
              }
            }
          }
        }
      }
    },
    "/messages/{conversationId}": {
      "get": {
        "summary": "Lấy danh sách message theo hội thoại",
        "parameters": [
          { "name": "conversationId", "in": "path", "required": true, "schema": { "type": "integer" } }
        ],
        "responses": {
          "200": {
            "description": "Danh sách message",
            "content": {
              "application/json": {
                "schema": { "type": "array", "items": { "type": "object" } }
              }
            }
          }
        }
      }
    },
    "/prompt": {
      "post": {
        "summary": "Gửi prompt, lưu prompt + response vào DB",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "prompt": { "type": "string" }
                },
                "required": ["prompt"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Phản hồi AI",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "prompt": { "type": "string" },
                    "reply": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/rag/upload": {
      "post": {
        "summary": "Upload file PDF/DOCX, extract, embed, lưu vector store",
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "file": { "type": "string", "format": "binary" }
                },
                "required": ["file"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Kết quả upload",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}